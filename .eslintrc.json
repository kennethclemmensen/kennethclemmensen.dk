{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "prefer-const": "warn",
        "semi": ["warn", "always"],
        "quotes": ["warn", "single"],
        "@typescript-eslint/naming-convention": [
            "warn",
            {
                "selector": ["class", "enum", "typeAlias"],
                "format": ["PascalCase"]
            },
            {
                "selector": "memberLike",
                "modifiers": ["private", "public"],
                "format": ["camelCase"],
                "leadingUnderscore": "forbid"
            }
        ]
    }
}
